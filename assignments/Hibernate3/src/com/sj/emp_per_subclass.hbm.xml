<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class  name="com.sj.Employee"  table="emp_subclass">
		<id  name="id"  type="int"  column="eid">
		<generator class ="assigned"/>
		</id>
	
	<property name ="name">
		<column name="ename"/>
	</property>
	<property name="sal">
		<column name="esal"/>
	</property>
	<joined-subclass name="com.sj.SalesPerson"  table="salesperson_subclass">
		<key  column="eid"/>
		<property name="comm" type="int"/>
	</joined-subclass>
		</class>
</hibernate-mapping>